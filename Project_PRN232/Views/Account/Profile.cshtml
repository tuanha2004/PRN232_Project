@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thông tin tài khoản</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Họ và tên:</strong>
                        </div>
                        <div class="col-md-8">
                            @ViewBag.FullName
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-md-8">
                            @ViewBag.UserEmail
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Vai trò:</strong>
                        </div>
                        <div class="col-md-8">
                            @if (ViewBag.UserRole == "Admin")
                            {
                                <span class="badge bg-danger">@ViewBag.UserRole</span>
                            }
                            else
                            {
                                <span class="badge bg-info">@ViewBag.UserRole</span>
                            }
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            @if (ViewBag.UserRole == "Admin")
                            {
                                <a href="@Url.Action("AdminDashboard", "Account")" class="btn btn-primary">
                                    <i class="bi bi-speedometer2"></i> Admin Dashboard
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
