@{
    ViewData["Title"] = "Reset Mật Khẩu User";
    var user = ViewBag.User as Project_PRN232.Services.UserDto;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4 class="mb-0"><i class="bi bi-key-fill"></i> Reset Mật Khẩu User</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (user != null)
                    {
                        <div class="alert alert-info">
                            <strong>User:</strong> @user.FullName<br />
                            <strong>Email:</strong> @user.Email
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i> 
                            <strong>Lưu ý:</strong> Mật khẩu sẽ được reset về: <strong>123456789</strong>
                        </div>

                        <div class="alert alert-danger">
                            <i class="bi bi-shield-exclamation"></i> 
                            <strong>Cảnh báo:</strong> Hành động này sẽ thay đổi mật khẩu của user ngay lập tức!
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Users" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                            <button type="button" class="btn btn-warning" onclick="confirmReset(@user.UserId, '@user.FullName')">
                                <i class="bi bi-arrow-clockwise"></i> Reset Mật Khẩu
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            Không tìm thấy thông tin user!
                        </div>
                        <a asp-action="Users" class="btn btn-secondary">Quay lại</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmReset(userId, fullName) {
            if (confirm(`Bạn có chắc chắn muốn reset mật khẩu của "${fullName}" về 123456789?`)) {
                fetch(`/Admin/ResetPasswordConfirm/${userId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        window.location.href = '/Admin/Users';
                    } else {
                        alert('Lỗi: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Có lỗi xảy ra: ' + error);
                });
            }
        }
    </script>
}

<form id="antiforgeryForm">
    @Html.AntiForgeryToken()
</form>

