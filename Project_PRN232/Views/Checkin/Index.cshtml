@using Project_PRN232.DTOs
@model List<CheckinRecordResponse>
@{
    ViewData["Title"] = "Check-in / Check-out";
    var currentCheckin = ViewBag.CurrentCheckin as CheckinRecordResponse;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-clock"></i> Quản Lý Check-in / Check-out
            </h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Current Check-in Status -->
            @if (currentCheckin != null)
            {
                <div class="card border-success mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-user-check"></i> Đang Check-in
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h5 class="card-title">@currentCheckin.JobTitle</h5>
                                <p class="mb-0">
                                    <strong><i class="fas fa-calendar-check me-2"></i>Check-in lúc:</strong> 
                                    <span class="text-success fw-bold">@currentCheckin.CheckinTime?.ToString("dd/MM/yyyy HH:mm")</span>
                                </p>
                            </div>
                            <div class="col-md-4 text-end">
                                <button type="button" class="btn btn-danger btn-lg" onclick="checkout(@currentCheckin.CheckinId)">
                                    <i class="fas fa-sign-out-alt"></i> Check-out
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> 
                    Bạn chưa check-in. Vui lòng check-in từ trang chi tiết công việc mà bạn đã được duyệt.
                </div>
            }

            <!-- Check-in History -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-history"></i> Lịch Sử Check-in / Check-out
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Công Việc</th>
                                        <th>Check-in</th>
                                        <th>Check-out</th>
                                        <th>Số Giờ Làm</th>
                                        <th>Trạng Thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@record.JobTitle</strong>
                                            </td>
                                            <td>
                                                @if (record.CheckinTime.HasValue)
                                                {
                                                    <i class="fas fa-calendar-alt text-muted"></i>
                                                    @record.CheckinTime.Value.ToString("dd/MM/yyyy HH:mm")
                                                }
                                            </td>
                                            <td>
                                                @if (record.CheckoutTime.HasValue)
                                                {
                                                    <i class="fas fa-calendar-alt text-muted"></i>
                                                    @record.CheckoutTime.Value.ToString("dd/MM/yyyy HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (record.WorkedHours.HasValue)
                                                {
                                                    <span class="badge bg-info">
                                                        @record.WorkedHours.Value.ToString("0.00") giờ
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (record.Status == "Checked In")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-circle-check"></i> Đang làm việc
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-circle-check"></i> Đã hoàn thành
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có lịch sử check-in nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function checkout(checkinId) {
            if (!confirm('Bạn có chắc chắn muốn check-out?')) {
                return;
            }

            fetch('/Checkin/Checkout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ checkinId: checkinId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi check-out');
            });
        }
    </script>
}
