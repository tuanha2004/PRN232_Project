@model List<JobDto>
@using Microsoft.AspNetCore.Http
@using Project_PRN232.DTOs
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Danh sách công việc";
    var isLoggedIn = !string.IsNullOrEmpty(HttpContextAccessor.HttpContext?.Session.GetString("JwtToken"));
    var fullName = HttpContextAccessor.HttpContext?.Session.GetString("FullName");
    var userRole = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
}

<!-- Debug Info (Remove in production) -->
@if (Model == null)
{
    <div class="alert alert-danger">
        <strong>Debug:</strong> Model is NULL! API might not be returning data.
        <a asp-action="TestApi" class="btn btn-sm btn-warning ms-2">Test API</a>
    </div>
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="fas fa-briefcase me-3"></i>Tìm Việc Làm Mơ Ước
                </h1>
                <p class="lead mb-4">
                    Khám phá hàng trăm cơ hội việc làm từ các nhà tuyển dụng hàng đầu
                </p>
                @if (isLoggedIn)
                {
                    <div class="alert alert-light d-inline-block">
                        <i class="fas fa-user-circle me-2"></i>
                        Xin chào, <strong>@fullName</strong>
                        @if (userRole == "Admin")
                        {
                            <span class="badge bg-danger ms-2">@userRole</span>
                        }
                        else
                        {
                            <span class="badge bg-info ms-2">@userRole</span>
                        }
                    </div>
                }
                else
                {
                    <div>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg me-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Đăng ký
                        </a>
                    </div>
                }
            </div>
            <div class="col-lg-4 text-center d-none d-lg-block">
                <i class="fas fa-search-location" style="font-size: 150px; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="container mb-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <form class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" placeholder="Tìm kiếm công việc..." id="searchInput">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                        <input type="text" class="form-control" placeholder="Địa điểm..." id="locationInput">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="statusFilter">
                        <option value="">Tất cả trạng thái</option>
                        <option value="Open" selected>Đang tuyển</option>
                        <option value="Closed">Đã đóng</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-primary w-100" onclick="filterJobs()">
                        <i class="fas fa-filter me-1"></i>Lọc
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Jobs Listing -->
<div class="container mb-5">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-list me-2"></i>Danh sách công việc
            <span class="badge bg-primary">@(Model?.Count ?? 0)</span>
        </h2>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-outline-secondary active" onclick="setViewMode('grid')">
                <i class="fas fa-th-large"></i>
            </button>
            <button type="button" class="btn btn-outline-secondary" onclick="setViewMode('list')">
                <i class="fas fa-list"></i>
            </button>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-5x text-muted mb-3"></i>
            <h3 class="text-muted">Chưa có công việc nào</h3>
            <p class="text-muted">Vui lòng quay lại sau để xem các công việc mới nhất!</p>
        </div>
    }
    else
    {
        <div id="jobsContainer" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var job in Model)
            {
                <div class="col job-item" 
                     data-title="@job.Title?.ToLower()" 
                     data-location="@job.Location?.ToLower()" 
                     data-status="@job.Status">
                    <div class="card h-100 shadow-sm hover-shadow transition">
                        <div class="card-header bg-white border-bottom-0 pt-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title mb-2 text-primary">
                                    <i class="fas fa-briefcase me-2"></i>@job.Title
                                </h5>
                                @if (job.Status == "Open")
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-door-open me-1"></i>Đang tuyển
                                    </span>
                                }
                                else if (job.Status == "Closed")
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-door-closed me-1"></i>Đã đóng
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@job.Status</span>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-muted small mb-3" style="min-height: 60px;">
                                @if (!string.IsNullOrEmpty(job.Description) && job.Description.Length > 100)
                                {
                                    @(job.Description.Substring(0, 100) + "...")
                                }
                                else
                                {
                                    @job.Description
                                }
                            </p>

                            <div class="mb-2">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                <span class="text-muted">@(job.Location ?? "Chưa cập nhật")</span>
                            </div>

                            @if (job.Salary.HasValue)
                            {
                                <div class="mb-2">
                                    <i class="fas fa-dollar-sign text-success me-2"></i>
                                    <span class="fw-bold text-success">@job.Salary.Value.ToString("N0") VNĐ/h</span>
                                </div>
                            }

                            <div class="mb-2">
                                <i class="fas fa-calendar-alt text-info me-2"></i>
                                <span class="text-muted small">
                                    @if (job.StartDate.HasValue && job.EndDate.HasValue)
                                    {
                                        @($"{job.StartDate.Value:dd/MM/yyyy} - {job.EndDate.Value:dd/MM/yyyy}")
                                    }
                                    else
                                    {
                                        <text>Linh hoạt</text>
                                    }
                                </span>
                            </div>

                            @if (!string.IsNullOrEmpty(job.ProviderName))
                            {
                                <div class="mb-2">
                                    <i class="fas fa-building text-primary me-2"></i>
                                    <span class="text-muted small">@job.ProviderName</span>
                                </div>
                            }

                            <div class="text-muted small">
                                <i class="fas fa-clock me-2"></i>
                                Đăng: @(job.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top">
                            <a asp-action="JobDetail" asp-route-id="@job.JobId" class="btn btn-primary w-100">
                                <i class="fas fa-eye me-2"></i>Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function filterJobs() {
            const searchText = document.getElementById('searchInput').value.toLowerCase();
            const locationText = document.getElementById('locationInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const jobItems = document.querySelectorAll('.job-item');

            jobItems.forEach(item => {
                const title = item.getAttribute('data-title') || '';
                const location = item.getAttribute('data-location') || '';
                const status = item.getAttribute('data-status') || '';

                const matchesSearch = title.includes(searchText);
                const matchesLocation = location.includes(locationText);
                const matchesStatus = !statusFilter || status === statusFilter;

                if (matchesSearch && matchesLocation && matchesStatus) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        function setViewMode(mode) {
            const container = document.getElementById('jobsContainer');
            const buttons = document.querySelectorAll('.btn-group button');
            
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.closest('button').classList.add('active');

            if (mode === 'list') {
                container.className = 'row row-cols-1 g-4';
            } else {
                container.className = 'row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4';
            }
        }

        // Real-time search
        document.getElementById('searchInput')?.addEventListener('input', filterJobs);
        document.getElementById('locationInput')?.addEventListener('input', filterJobs);
        document.getElementById('statusFilter')?.addEventListener('change', filterJobs);

        // Filter jobs when page loads (show only Active by default)
        window.addEventListener('DOMContentLoaded', function() {
            filterJobs();
        });
    </script>

    <style>
        .hover-shadow {
            transition: all 0.3s ease;
        }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .transition {
            transition: all 0.3s ease;
        }

        .job-item {
            transition: opacity 0.3s ease;
        }
    </style>
}

<div class="text-center mt-5">
    <h1 class="display-4">Chào mừng đến với Project PRN232</h1>
    <p class="lead">Hệ thống quản lý với JWT Authentication và Role-Based Access Control</p>
    
    @if (isLoggedIn)
    {
        <div class="alert alert-success mt-4" role="alert">
            <h4 class="alert-heading">
                <i class="bi bi-check-circle-fill"></i> Bạn đã đăng nhập thành công!
            </h4>
            <p>Xin chào <strong>@fullName</strong>!</p>
            <p>Vai trò của bạn: 
                @if (userRole == "Admin")
                {
                    <span class="badge bg-danger">@userRole</span>
                }
                else
                {
                    <span class="badge bg-info">@userRole</span>
                }
            </p>
            <hr>
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a href="@Url.Action("Profile", "Account")" class="btn btn-primary">
                    <i class="bi bi-person"></i> Xem thông tin cá nhân
                </a>
                @if (userRole == "Admin")
                {
                    <a href="@Url.Action("AdminDashboard", "Account")" class="btn btn-danger">
                        <i class="bi bi-speedometer2"></i> Admin Dashboard
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4" role="alert">
            <h4 class="alert-heading">
                <i class="bi bi-info-circle-fill"></i> Chưa đăng nhập
            </h4>
            <p>Vui lòng đăng nhập để sử dụng đầy đủ tính năng của hệ thống.</p>
            <hr>
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">
                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập ngay
            </a>
        </div>

        <!-- Demo accounts block removed -->
    }

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-shield-check text-primary"></i> JWT Authentication
                    </h5>
                    <p class="card-text">Bảo mật với JSON Web Token, xác thực người dùng an toàn.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-people text-success"></i> Role-Based Access
                    </h5>
                    <p class="card-text">Phân quyền dựa trên vai trò: Admin, User với các tính năng riêng biệt.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-code-slash text-danger"></i> ASP.NET Core MVC
                    </h5>
                    <p class="card-text">Xây dựng trên nền tảng ASP.NET Core với kiến trúc MVC hiện đại.</p>
                </div>
            </div>
        </div>
    </div>
</div>
