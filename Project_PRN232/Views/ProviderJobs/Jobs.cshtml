@using Project_PRN232.DTOs
@model List<JobDto>

@{
    ViewData["Title"] = "Quản Lý Jobs";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-briefcase-fill"></i> Quản Lý Jobs</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle-fill"></i> Tạo Job Mới
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Danh Sách Jobs Của Bạn</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Tiêu Đề</th>
                                <th>Địa Điểm</th>
                                <th>Lương</th>
                                <th>Ngày Bắt Đầu</th>
                                <th>Ngày Kết Thúc</th>
                                <th>Trạng Thái</th>
                                <th>Ngày Tạo</th>
                                <th style="width: 250px;">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in Model)
                            {
                                <tr id="job-row-@job.JobId">
                                    <td>@job.JobId</td>
                                    <td>
                                        <strong>@job.Title</strong><br />
                                        <small class="text-muted">@(job.Description?.Length > 50 ? job.Description.Substring(0, 50) + "..." : job.Description)</small>
                                    </td>
                                    <td>@job.Location</td>
                                    <td>
                                        @if (job.Salary.HasValue)
                                        {
                                            <strong>@job.Salary.Value.ToString("N0") VNĐ</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Thỏa thuận</span>
                                        }
                                    </td>
                                    <td>@job.StartDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@job.EndDate?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (job.Status == "Open")
                                        {
                                            <span class="badge bg-success">Open</span>
                                        }
                                        else if (job.Status == "Closed")
                                        {
                                            <span class="badge bg-danger">Closed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">@job.Status</span>
                                        }
                                    </td>
                                    <td>@job.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@job.JobId" 
                                               class="btn btn-info" title="Chi tiết">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                            <a asp-action="Applications" asp-route-id="@job.JobId" 
                                               class="btn btn-primary" title="Applications">
                                                <i class="bi bi-file-earmark-text-fill"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@job.JobId" 
                                               class="btn btn-warning" title="Sửa">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger" 
                                                    onclick="deleteJob(@job.JobId, '@job.Title')" title="Xóa">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Bạn chưa có job nào. Hãy tạo job mới!
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteJob(jobId, title) {
            if (confirm(`Bạn có chắc chắn muốn xóa job "${title}"?`)) {
                fetch(`/ProviderJobs/Delete/${jobId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById(`job-row-${jobId}`).remove();
                        showAlert('success', data.message);
                        setTimeout(() => {
                            window.location.reload();
                        }, 1500);
                    } else {
                        showAlert('danger', data.message);
                    }
                })
                .catch(error => {
                    showAlert('danger', 'Có lỗi xảy ra: ' + error);
                });
            }
        }

        function showAlert(type, message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const container = document.querySelector('.container');
            container.insertBefore(alertDiv, container.firstChild);
            
            setTimeout(() => {
                alertDiv.remove();
            }, 3000);
        }
    </script>
}

<form id="antiforgeryForm">
    @Html.AntiForgeryToken()
</form>
